{
  "manifest_version": 2,
  "name": "highlighter",
  "description": "Highlight keywords",
  "version": "1.0",
  "icons": {
    "16": "/img/favicon-16x16.png",
    "48": "/img/favicon-48x48.png",
    "128": "/img/favicon-128x128.png"
  },
  "page_action": {
    "default_icon": {
      "16": "/img/favicon-16x16.png",
      "48": "/img/favicon-48x48.png",
      "128": "/img/favicon-128x128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://www.indeed.com/*",
        "https://angel.co/*"
      ],
      "css": [
        "main.css"
      ]
    }
  ]
}